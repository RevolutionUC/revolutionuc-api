{
  "name": "revolutionuc-api",
  "version": "1.0.0",
  "description": "New API for Revolution UC",
  "author": "Isiah Lloyd",
  "license": "MIT",
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register -r dotenv/config src/main.ts",
    "start:dev": "nodemon",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/src/main.js",
    "start:hmr": "node dist/server",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "webpack": "webpack --config webpack.config.js",
    "debug": "nodemon --inspect"
  },
  "engines": {
    "node": "8.10.x"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.0",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/swagger": "^4.7.5",
    "@nestjs/typeorm": "^7.1.4",
    "aws-sdk": "^2.353.0",
    "bcrypt": "^3.0.8",
    "class-transformer": "^0.1.9",
    "class-validator": "^0.9.1",
    "dotenv": "^6.1.0",
    "fastify-formbody": "^2.0.0",
    "jsonwebtoken": "^8.3.0",
    "mailgun-js": "^0.22.0",
    "multer": "^1.4.1",
    "multer-s3": "^2.9.0",
    "nestjs-typeorm-paginate": "^2.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "pg": "^7.4.3",
    "reflect-metadata": "^0.1.12",
    "revolutionuc-emails": "github:revolutionuc/revolutionuc-emails",
    "rxjs": "^6.0.0",
    "swagger-ui-express": "^4.1.4",
    "typeorm": "^0.2.22",
    "typescript": "^4.1.2"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/aws-sdk": "^2.7.0",
    "@types/bcrypt": "^2.0.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/mailgun-js": "^0.16.2",
    "@types/multer": "^1.3.7",
    "@types/node": "^9.3.0",
    "@types/passport-jwt": "^3.0.3",
    "@types/supertest": "^2.0.4",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.41.5",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
